<Window x:Class="Beb64.GUI.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="About BeB64"
        Height="360" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource WindowBackgroundBrush}"
        Foreground="{DynamicResource WindowForegroundBrush}"
        ShowInTaskbar="False"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Version -->
            <RowDefinition Height="Auto"/>
            <!-- Publisher / Build -->
            <RowDefinition Height="*"/>
            <!-- Links + Diagnostics -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,12">
            <Border Width="42" Height="42" CornerRadius="6"
                    Background="{DynamicResource AccentBrush}"
                    Margin="0,0,12,0">
                <TextBlock Text="B64"
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="16"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>

            <StackPanel>
                <TextBlock Text="BeB64 - Base64 Encoder / Decoder"
                           FontWeight="Bold" FontSize="18"/>
                <TextBlock Text="{Binding Tagline, Mode=OneWay}" FontStyle="Italic" />
            </StackPanel>
        </StackPanel>

        <!-- Version -->
        <TextBlock Grid.Row="1"
                   Text="{Binding VersionLine, Mode=OneWay}"
                   Margin="0,0,0,8" />

        <!-- Publisher / Build -->
        <TextBlock Grid.Row="2" Margin="0,0,0,12" TextWrapping="Wrap">
            <Run Text="Publisher: " />
            <Run Text="{Binding Publisher, Mode=OneWay}" />
            <LineBreak/>
            <Run Text="Built on: " />
            <Run Text="{Binding BuildDate, Mode=OneWay}" />
        </TextBlock>

        <!-- Links & Diagnostics -->
        <StackPanel Grid.Row="3" Margin="0,0,0,12">
            <TextBlock Margin="0,0,0,8" TextWrapping="Wrap">
                <Run Text="Project: " />
                <Hyperlink NavigateUri="{Binding ProjectUrl, Mode=OneWay}" RequestNavigate="Hyperlink_RequestNavigate">
                    <Run Text="{Binding ProjectUrl, Mode=OneWay}" />
                </Hyperlink>
                <LineBreak/>
                <Run Text="Issues: " />
                <Hyperlink NavigateUri="{Binding IssuesUrl, Mode=OneWay}" RequestNavigate="Hyperlink_RequestNavigate">
                    <Run Text="{Binding IssuesUrl, Mode=OneWay}" />
                </Hyperlink>
            </TextBlock>

            <TextBlock Text="Diagnostics:" FontWeight="Bold" Margin="0,8,0,4"/>
            <ScrollViewer Height="120"
                          VerticalScrollBarVisibility="Auto"
                          Background="{DynamicResource ControlBackgroundBrush}"
                          BorderBrush="{DynamicResource ControlBorderBrush}"
                          BorderThickness="1">
                <TextBlock Text="{Binding DiagnosticsText, Mode=OneWay}"
                           FontFamily="Consolas"
                           TextWrapping="Wrap"
                           Padding="6"/>
            </ScrollViewer>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Copy diagnostics" Margin="0,0,10,0" Width="130" Click="CopyDiagnostics_Click"/>
            <Button Content="OK" Width="80" IsDefault="True" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
